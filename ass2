#include <stdlib.h>
main()
{
    int i, sum=0,f,n,num,digit;
    printf("Enter a Number\n");
    scanf("%d",&n);
    num=n;
    while(n>0)
    {
        digit=n%10;
        fact=1;
        for(i=1;i<=digit;i++)
        {
            f=f*i;
        }
        sum=sum+f;
        n=n/10;
    }
    if(num==sum)
    {
        printf("%d is a Strong Number",num);
    }
    else
    {
        printf("%d is not a Strong Number",num);
    }
}
